{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts",
   "**/*.ts", 
   "**/*.tsx", ".next/types/**/*.ts", 
   "src/dbConfig/dbConfig.ts", "src/context/UserProvider.tsx", 
   "src/components/HomeStatsCard.tsx", 
   "src/app/(dashboard)/albums/components/InputElement.js",
    "src/app/(dashboard)/payments/label/[labelid]/components/PaymentModal.tsx", 
    "src/app/(dashboard)/albums/new-release/page.tsx", 
    "src/app/(dashboard)/albums/components/MultiSelect.js", "src/components/Navbar.tsx"],
  "exclude": ["node_modules"]
}
